{
  "manifest_version": 3,
  "name": "Rohlik extension",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.rohlik.cz/*"],
      "js": ["src/content/rohlik.tsx"],
      "run_at": "document_idle"
    }
  ]
}
